.products{
  min-height: 500px;

  &__text{
    display:flex;
    justify-content: space-between;
  }
  &__title{
    font-size: 2.5rem;
    font-weight: 300;
    line-height: 6rem;

    color: #242424;
  }
}

.cards{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

  &__item{
  width:300px;
  height: 270px;

  margin: 0px 20px 20px 0px;

  background-color: #fff;
  }

  &__item:last-of-type{
    margin-right: 0px;
  }
}
