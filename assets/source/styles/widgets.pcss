.widgets{
  display: flex;
}

.widget{

  width:260px;
  margin: 50px 40px 20px 0px;


  &__title{
    margin-bottom: 25px;

    font-size: 1.4rem;
    line-height: 1.8rem;
    color: #7d7d7d;

    text-transform: uppercase;
  }

  &__text{
      text-align: justify;
      
    	font-style: italic;
      font-size: 1.2rem;
      line-height: 1.8rem;

      color: #a4a4a4;
  }
}
