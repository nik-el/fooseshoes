/* Окно слайдера */
.slider{
  position: relative;
  display: flex;
  justify-content: flex-end;
  margin: 0 auto;
  min-height: 460px;

  &--short{
  min-height: 260px;
  }

  &__price{
    margin-top: 15px;
    margin-right: 20px;
  }

  &__information{
    display: none;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: flex-start;

    position: relative;

    width: 390px;
    margin-right: 40px;
    margin-top: 55px;
    z-index: 10;

    &--none{
      opacity: 0;
    }

    &--short{
    display: flex;
    flex-direction: row;
    margin-top: 38px;
    }

  }
  &__title{
    display: block;
    margin-top: 10px;
    margin-bottom: 8px;
    width: 290px;
    font-weight: 300;
    font-size: 4rem;
    line-height: 4rem;
  }

  &__text{
    margin-bottom: 15px;
    font-weight: 300;
    font-size: 2rem;
    line-height: 2.5rem;
  }
}


/* Переключение слайдов */
#sld-1:checked ~ .line .slider__information:nth-of-type(1) {
  display: block;
}
#sld-1:checked ~ .line .slide:nth-of-type(1)::before{
  color: rgba(255,255,255,1);
  background-color: #57c5a0;
}
#sld-1:checked ~ .line .slide:nth-of-type(1) .slide__title{
