.specials {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 230px;
}

.special{
  display:flex;
  justify-content: center;
  align-items: center;

  min-width: 300px;
  min-height: 180px;

  background-color: #fff;

  &__text{
    padding: 20px 40px;

    font-size: 2.5rem;
    font-weight: 300;
    line-height: 6rem;

    text-transform: uppercase;
    color: #fff;

    background-color: rgba(36,36,36,.9);
  }
}
